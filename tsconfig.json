{
      "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": ["dom", "es2017"],
        "declaration": true,
        "declarationDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
      },
      "include": ["src"],
      "exclude": ["node_modules", "dist"]
    }
